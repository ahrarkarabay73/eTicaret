@model IEnumerable<b161200020.Entity.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Products</h2>

<p>
    @Html.ActionLink("Create New Product", "Create", null, new { @class="btn btn-primary" })
</p>
<hr/>
<table class="table">
    <tr>
        <th>
            Img
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StockQuantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsApproved)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsHome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="~/@item.Path" width="70" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StockQuantity)
        </td>
        <td>
            @if (item.IsApproved)
            {
                <label class="badge text-bg-success text-center">
                    <i class="fa-solid fa-check"></i>
                    Yes
                </label>

            }
            else
            {
                <label class="badge text-bg-danger text-center">
                    <i class="fa-solid fa-xmark"></i>
                    No
                </label>
            }
        </td>
        <td>
            @if (item.IsHome)
            {
                <label class="badge text-bg-success text-center">
                    <i class="fa-solid fa-check"></i>
                    Yes
                </label>

            }
            else
            {
                <label class="badge text-bg-danger text-center">
                    <i class="fa-solid fa-xmark"></i>
                    No
                </label>
            }
        </td>
        <td>
            @Html.ActionLink("Update", "Edit", new { id=item.Id }, new {@class="btn btn-warning btn-sm"})
            
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}

</table>
